{
  "name": "bbs-server",
  "version": "1.0.0",
  "description": "通天塔bbs服务端",
  "main": "src/index.ts",
  "scripts": {
    "dev": "gulp copy & npm run dev-gulp",
    "dev-gulp": "gulp watch",
    "dev-node": "nodemon --exec 'ts-node --project tsconfig.json' ./src/index.ts",
    "build": "gulp build & gulp copy",
    "watch": "npm run tslint && npm run watch-ts && npm run tslint",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy": "gulp copy",
    "start": "NODE_ENV=production node --harmony ./dist/index.js"
  },
  "keywords": [
    "通天塔"
  ],
  "author": "jinzhengkun@jd.com",
  "license": "ISC",
  "devDependencies": {
    "@types/koa": "^2.0.46",
    "@types/mongoose": "^5.0.15",
    "@types/mongoose-auto-increment": "^5.0.30",
    "@types/mongoose-paginate": "^5.0.6",
    "nodemon": "^1.17.5",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "@types/yargs": "^11.0.0",
    "bluebird": "^3.5.1",
    "fs": "^0.0.1-security",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-sequence": "^1.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^5.0.0-alpha.1",
    "http": "^0.0.0",
    "https": "^1.0.0",
    "koa": "^2.5.1",
    "mongoose": "^5.1.5",
    "mongoose-auto-increment": "^5.0.1",
    "mongoose-paginate": "^5.0.3",
    "yargs": "^11.0.0"
  }
}
